<!--pages/Features/Debugging/Debugging.wxml-->

<view class="title">
  <text class='txt'>{{title}}</text>
</view>

<view class="container2">
  <view class='def'>
    <button class='btn1' style="background-color:{{backgroundcolor}}" bindtap="btn1" disabled="{{button_disabled}}">{{buttonText}}</button>
  </view>

  <view class='abc2'>
    <text class='txt1'>工作状态:</text>
  </view>
  <view class='def'>
    <text class='tips'>\n{{states}}</text>
  </view>

  <view class='abc2'>
    <text class='txt1'>信号强度(V):</text>
  </view>
  <view class='def2'>
    <text class='tle'>正向</text>
    <text class='tle'>反向</text>
  </view>
  <view class='def2' wx:for="{{items}}" wx:key="index">
    <text class='num'>{{item.index}}</text>
    <input class="input2" bindinput="bindInput_0_{{item.index}}" type="digit" placeholder="0.00" value="{{item.valueP}}" style="border-color:{{item.colorP}};" disabled="{{value1_disabled}}">{{input}}</input>
    <input class="input2" bindinput="bindInput_1_{{item.index}}" type="digit" placeholder="0.00" value="{{item.valueN}}" style="border-color:{{item.colorN}};" disabled="{{value1_disabled}}">{{input}}</input>
  </view>

  <view class='abc2'>
    <text class='txt1'>电池电压(V):</text>
  </view>
  <view class='def'>
    <input class="input" bindinput="bindInput1" type="digit" placeholder="" value="{{input_value1}}" style="border-color:{{bordercolor}};" disabled="{{value1_disabled}}">{{input}}</input>
  </view>

  <view class='abc2'>
    <text class='txt1'>固件版本:</text>
  </view>
  <view class='def'>
    <input class="input" bindinput="bindInput1" type="digit" placeholder="" value="{{input_value2}}" style="border-color:{{bordercolor}};" disabled="{{value1_disabled}}">{{input}}</input>
  </view>

  <view class='def'>
    <text class='tips'>\n\n{{countings}}</text>
    <text class='tips'>\n\n{{tips}}</text>
  </view>
</view>