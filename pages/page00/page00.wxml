<!--pages/page00.wxml-->
<view class="container">
    <text>请选择仪表类型：\n\n</text>
    <radio-group class="radio-group" bindchange="radioChange">
        <radio color="#3d8ae5" class="radio" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
            <text>{{item.value}}</text>
        </radio>
    </radio-group>
    <button class='btn1' style="background-color:{{backgroundcolor}}" bindtap="btn1">前往</button>
</view>
